# Configuration definitions for thorn AMReX

PROVIDES AMReX
{
  SCRIPT src/detect.sh
  LANG bash
  OPTIONS AMREX_DIR AMREX_INSTALL_DIR AMREX_INC_DIRS AMREX_LIB_DIRS AMREX_LIBS AMREX_ENABLE_FORTRAN AMREX_ENABLE_CUDA
}

# Pass configuration options to build script
REQUIRES AMReX

REQUIRES MPI

# just in case a self-compiled CMake is required
OPTIONAL CMake
{
}
